@page "/login"
@model AdaStore.UI.Areas.Identity.Pages.Account.LoginModel

<form class="form-colum" method="post">
    <h1>Inicio de Sesión</h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="login-email">
        <input type="text" asp-for="Input.Email" placeholder="Correo electrónico" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email"></span>
    </div>
    <div class="login-password">
        <input type="password" asp-for="Input.Password" placeholder="Contraseña" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.Password"></span>
    </div>
    <Label class="label-after-check" asp-for="Input.Rememberme">
        <input type="checkbox" asp-for="Input.Rememberme" />
        Recordarme
    </Label>
    <button class="btn btn-secondary btn-full" type="submit">Iniciar sesión</button>
    <a href="/register">Ir al registro</a>
</form>
